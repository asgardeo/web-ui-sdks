{
  "name": "@asgardeo/react",
  "version": "0.5.5",
  "description": "React implementation of Asgardeo JavaScript SDK.",
  "keywords": [
    "asgardeo",
    "react",
    "spa"
  ],
  "homepage": "https://github.com/asgardeo/web-ui-sdks/tree/main/packages/react#readme",
  "bugs": {
    "url": "https://github.com/asgardeo/web-ui-sdks/issues"
  },
